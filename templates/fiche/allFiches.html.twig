{% extends 'base.html.twig' %}

{% block title %} Toutes les fiches {% endblock %}
{% block stylesheets %}
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
			<link href="{{ asset('css/allFiches.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container">
<div class="row">  
    {% for fiche in lesFiches %}
  
<div class="card me-4 mb-4" style="width: 15rem;">
  <img src="{{ asset('images/html-5.jpg') }}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{ fiche.nom }}</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="/fiche/voir/{{ fiche.id }}" class="btn btn-primary">Entrer</a>
  </div>
<br>
</div>


    {% endfor %}
    </div>
</div>
 {% endblock %}