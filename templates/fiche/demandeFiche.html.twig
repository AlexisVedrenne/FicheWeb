{% extends "base.html.twig" %}

{% block body %}
  <style>
        .bannierre{
            background: url('{{ asset("images/banniere2.jpg") }}');
            display: flex;
            align-items: center;
            justify-content: center;
            height: 400px;
            background-attachment:fixed;
            background-repeat:no-repeat;
            background-size:cover;
            background-position: 50% 10%;
        }
  </style>
  <div class ="bannierre"> 
        <h1 class="bannierre-titre"> Demande de fiche </h1>
  </div>
    {{form_start(form)}}

        <div class="container col-md-5 mt-4">
            <div class="row">
                {{form_label(form.objet, "Entrer l'objet de votre demande") }}
                {{form_widget(form.objet, {'attr':{'placeholder':"Entrez l'objet...",'class':"form-control mb-2"}}) }}
                {{form_label(form.categorie, "Choisir une catégorie de fiche") }}
                {{form_widget(form.categorie, {'attr':{'placeholder':"Choisir une catégorie",'class':"form-control mb-2"}}) }}
            </div>
            <div class="row">
                {{form_label(form.message, "Décrire ici votre demande") }}
                {{form_widget(form.message, {'attr':{'placeholder':"Décrire la demande...",'class':"form-control","rows":"15"}}) }}
            </div>
            <div class="mt-2 row mb-4"><button class="btn btn-success">Envoyer</button></div>
        </div>
    
    {{form_end(form)}}
{% endblock %}