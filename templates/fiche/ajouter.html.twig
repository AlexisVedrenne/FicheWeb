{% extends 'base.html.twig' %}


{% block title %}Ajouter une fiche{% endblock %}

{% block javascripts %} <script type="text/javascript" src="{{ asset("js/fiche.js") }}"></script>{% endblock %}

{% block body %}
<div class='card text-center'>
    <h1 class=""> Ajouter une fiche</h1>
    {{ form_start(form)}}
    <div class="container">
    {{form_label(form.nom, 'Titre de la fiche') }}
    {{form_widget(form.nom, {'attr':{'placeholder':"Titre de la fiche ",'class':"form-control"}}) }}
    
    {{form_label(form.nom, 'Les Catégories') }}
    {{form_widget(form.laCategorie, {'attr':{'placeholder':"Catégorie ",'class':"form-select"}}) }}
    
    <br>
    <button class="btn btn-success" type="submit">Créer la fiche</button>
    {{form_end(form)}}
    <a class="btn btn-secondary" id="btnCtn">Ajouter un contenu</a>

    <input name="nbContenue" style="width:50px !important;" id="nbContenue" class="btn btn-warning" value="0" readonly></input>

    <div class="container" id="contenue"></div>
   
</div>
{% endblock %}
