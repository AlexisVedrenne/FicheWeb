{% extends 'base.html.twig' %}

{% block title %}Connectez vous !{% endblock %}

{% block body %}
  <br>
  <div class="container col-4">
    <form method="post">
      {% if error %}
        <div class="alert alert-danger">Erreur lors de la connexion. Email ou mot de passe invalide</div>
      {% endif %}

      <h1 class="text-center h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
      <label for="inputEmail">Email</label>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input placeholder="Entre votre adresse email..." type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required="required" autofocus="autofocus">
      </div>
      
      <label for="inputPassword">Mot de passe</label>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input placeholder="Entre votre mot de passe..." type="password" name="password" id="inputPassword" class="form-control" required="required">
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <div class="conteneur">
        <button  class="btn btn-lg btn-success" type="submit">Connexion</button>
        <div class="conteneur mb-3 form-check">
          <label class="aligne-centre form-check-label"><input class="form-check-input" id="ckcLogin" type="checkbox" name="_remember_me">Se souvenir de moi</label>
        </div>
      </div>

    </form>

</div>
{% endblock %}
