{% extends "base.html.twig" %}

{% block body %}
    <style>
        .bannierre{
            background: url('{{ asset("images/banniere2.jpg") }}');
            display: flex;
            align-items: center;
            justify-content: center;
            height: 400px;
            background-attachment:fixed;
            background-repeat:no-repeat;
            background-size:cover;
            background-position: 50% 10%;
        }
        button{
            display :none;
        }

        button.btn{
            display :inline-block;
        }
    </style>
    <div class ="bannierre"> 
        <h1 class="bannierre-titre"> Mot de passe oublier </h1>
    </div>
    <form class="ajustForm d-flex align-items-center" method="post">
        <div class="container mt-4 mb-4 ">
            <h1 class="text-center">Récupération de mot de passe</h1>
            <div class="row">
                <div class="col-md-6 offset-md-2"><input class="form-control" placeholder="Entrez votre adrresse email..." type="text" name="mail"></input></div>
                <button class="btn btn-success col-md-2 col-sm-5 col-5 offset-3 offset-sm-3 offset-md-0 mt-md-0 mt-sm-2 mt-2" type="submit">Envoyer<button>
            </div>
        </div>      
    </form>

{% endblock %}