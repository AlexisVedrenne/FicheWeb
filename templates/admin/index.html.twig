{% extends 'base.html.twig' %}

{% block body %}

    {% if app.user and (app.user.roles["ROLE"])=="ROLE_ADMIN" %}

    <div class="container">
        <div class="row">    
            <div class="card me-5 mt-2" style="width: 18rem;">
                <div class="card-body">
                    <div><h5 class="card-title">Gestion des demandes de fiche</h5></div>
                    <h6 class="card-subtitle mb-2 text-muted">Dernière demande : {{last['pseudo']}} </h6>
                    <p class="card-text">{{last['message']}}...</p>
                    <a href="/admin/demandes" class="card-link">Voir toutes les demandes</a>            
                </div>
                {% if last['nb'] !=0 %}
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">{{last['nb']}}</span> 
                {% endif %}   
            </div>
            <div class="card me-5 mt-2" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Gestion des commentaires</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Administration commentaire</h6>
                    <p class="card-text">Ici il est possible de gérer les nouveaux commentaires poster par les utilisateurs</p>
                    <a href="/admin/commentaires" class="card-link">Voir les commentaires</a>
                </div>
                {% if nb[0]['nb'] !=0 %}
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">{{nb[0]['nb']}}</span>
                {% endif %}     
            </div>
            <div class="card card me-5 mt-2" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Gestion des utilisateurs</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Administration utilisateurs</h6>
                    <p class="card-text">Ici vous pouvez gerer tous les utilisateurs du site (role, mot de passe, pseudo, status...)</p>
                    <a href="#" class="card-link">Voir les utilisateurs</a>
                </div>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary">{{nbU[0]['nb']}}</span>     
            </div>
        </div>
    </div>
    {% else %}

    <br>
    <h1 class="text-center">Vous n'etes pas connecter ou vous n'avez pas la permission d'accèder à cette page</h1>

    {% endif %}


{% endblock %}






