{% extends 'base.html.twig' %}
{% block title %}FicheWeb{% endblock %}

{% block body %}

    <!-- HERO -->
    <div id="home" class="hero">
        <div class="home-left">
            <h2 class="home-titre">FICHE WEB</h2>
            <p class="home-p">Web connaissance</p>
            <p class="home-p">Consulter nos tutoriels afin d'acquérir de nouvelles compétences</p>
            <p class="home-p">Tout les jours !</p>
            {% if app.user == false %}
            <div class="btn-hero">
                <a href="/connexion" class="btn-home b1">Connexion</a>
                <a href="/inscription" class="btn-home b2">Inscription</a>
            </div>
            {% else  %}
            <div class="bloc-role">
                <hr class="trait">
                <p class="home-p">Bienvenue {{ app.user.pseudo }} !</p>
                {% if app.user.roles['ROLE'] == 'ROLE_ADMIN' %}
                    <p class="home-p">Vous etes administrateur !</p>
                {% else %}
                    <p class="home-p">Vous etes un utilisateur</p>
                {% endif %}
                <hr class="trait">
            </div>
            {% endif %}
        </div>
        <div class="home-right"></div>
    </div>

    <!-- BLOC DE 3 LOGOS -->
    <div class="bloc-info">
    <h1 class="bloc-titre">INFORMATIONS</h1>
    <section class="bloc-services">
        <div class="bloc-item">
            <i class="bi bi-card-text fiche-icon"></i>
            <p class="bloc-services-paragraphe"> Nos fiches tutoriels qu'on propose avec des textes, images et vidéos. </p>
        </div>
        <div class="bloc-item">
            <i class="bi bi-lightbulb solution-icon"></i>
            <p class="bloc-services-paragraphe"> Nos solutions qui permettront de répondre à votre besoin.</p>
        </div>
        <div class="bloc-item">
            <i class="bi bi-reception-4 competence-icon"></i>
            <p class="bloc-services-paragraphe"> Acquérir des compétences c'est une bonne chose.</p>
        </div>
    </section>
    </div>
    
    <!-- BLOC AVEC LES FICHES --> 
    <div class="bloc2">
        <h1 class="bloc2-grand-titre">LES FICHES</h1>

        
            <div class="container bloc2-fiches">
            {% for fiche in lesFiches %}
                <div class="box">
                    <div class="content">
                        <h2 class="bloc2-num">{{ fiche.id }}</h2>
                        <h3 class="bloc2-titre">{{ fiche.nom }}</h3>
                        <p class="bloc2-p">{{fiche.contenus[0].description}}</p>
                        <a href="#" class="bloc2-lien">En savoir plus</a>
                    </div>
                </div>
        
                
          {% endfor %}
            </div> 
          
        
            
        
            </div> 
        
    </div>
    
{% endblock %}

